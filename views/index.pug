doctype html
html
    head
        title="Hello Pug"
        link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        div.container
            h2.text-center Welcome to the best application in the Internet!
            div.col-md-6.col-md-offset-3
                form.form-horizontal(action='http://localhost:3000/auth/google', method='GET')
                    div.form-group
                        label.col-sm-2.control-label(for='username') Username
                        div.col-sm-10
                            input.form-control(type='text' name='username' id='username')
                    div.form-group
                        label.col-sm-2.control-label(for='password') Password
                        div.col-sm-10
                            input.form-control(type='password' name='password' id='password')
                    div.col-sm-offset-2.col-sm-10
                        div.checkbox
                            input(type='checkbox')
                            p Remember me
                    div.form-group
                        div.col-sm-offset-2.col-sm-10
                            input.btn.btn-primary(type='submit' value="log in")
